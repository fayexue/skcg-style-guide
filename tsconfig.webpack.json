{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",


        "strict": true,

        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,

        "skipLibCheck": true,
        "baseUrl": "./src",
        "outDir": "build",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "files": ["./src/json.d.ts", "./src/assets.d.ts"],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    }
}